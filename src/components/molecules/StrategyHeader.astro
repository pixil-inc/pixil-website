---
interface Props {
  date: string;
  client: {
    name: string;
    industry?: string;
  };
  strategyType?: string;
}

const { date, client, strategyType = 'Website Strategy' } = Astro.props;
---

<div class="strategy-header">
  <div class="brand">
    <h1>Pixil Web Studio</h1>
  </div>
  <div class="strategy-meta">
    <div class="strategy-label">Prepared For</div>
    <div class="strategy-client">{client.name}</div>
    {client.industry && <div class="strategy-date">{client.industry}</div>}
    <div class="strategy-date">{date}</div>
    <span class="strategy-type">{strategyType}</span>
  </div>
</div>

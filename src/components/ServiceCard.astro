---
const { title, description, icon, index } = Astro.props;
---

<div
  class="group flex min-h-[420px] flex-col justify-between rounded-3xl border border-black/5 bg-white p-10 shadow-[0_5px_30px_-15px_rgba(0,0,0,0.05)] transition-shadow duration-500 hover:shadow-lg md:p-14"
>
  <div class="space-y-6">
    <div class="flex items-start justify-between">
      <span
        class="text-primary/50 rounded-full border border-black/10 px-2 py-1 font-mono text-xs transition-colors group-hover:bg-black group-hover:text-white"
        >{index.toString().padStart(2, '0')}</span
      >
      <span
        class="material-symbols-outlined text-primary/20 group-hover:text-primary text-4xl font-light transition-colors"
        >{icon}</span
      >
    </div>
    <h3 class="font-display pr-8 text-3xl font-medium md:text-4xl">{title}</h3>
  </div>
  <p class="text-primary/60 mt-8 text-lg leading-relaxed">{description}</p>
</div>

---
import SectionWrapper from '@/components/shared/SectionWrapper.astro';
import Button from '@/components/shared/Button.astro';
---

<SectionWrapper id="get-in-touch" classNames="px-6 py-0">
  <div class="mx-auto max-w-7xl space-y-24">
    <div class="bg-primary text-oatmeal relative overflow-hidden rounded-[3rem] p-12 text-center lg:p-32">
      <div class="relative z-10">
        <h2 class="mb-8 text-4xl font-medium md:text-5xl">Let’s build something exceptional together.</h2>
        <p class="mx-auto mb-12 max-w-2xl text-xl font-light text-white/70 md:text-xl">
          Whether you have a detailed roadmap or just a spark of an idea, we’d love to hear about it. No high-pressure
          sales tactics—just a friendly conversation about your goals and how we can bring them to life.
        </p>

        <!-- Contact Buttons -->
        <div id="contact-buttons" class="flex flex-col justify-center gap-6 sm:flex-row">
          <Button id="show-form-btn" style="secondary">Start a Conversation</Button>
          <Button href="mailto:hello@pixil.ca?subject=Start%20a%20Conversation" style="tertiary"
            >hello(at)pixil.ca</Button
          >
        </div>

        <!-- Hidden Contact Form -->
        <div id="contact-form" class="mx-auto mt-12 hidden max-w-2xl">
          <form class="space-y-6 text-left" novalidate>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div>
                <label class="mb-2 block text-sm font-medium text-white/90" for="name"> Name * </label>
                <div class="relative">
                  <input
                    class="w-full rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white transition-all placeholder:text-white/50 focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                    id="name"
                    name="name"
                    placeholder="Jane Doe"
                    required
                    type="text"
                  />
                  <div
                    class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                  >
                  </div>
                </div>
              </div>
              <div>
                <label class="mb-2 block text-sm font-medium text-white/90" for="email"> Email Address * </label>
                <div class="relative">
                  <input
                    class="w-full rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white transition-all placeholder:text-white/50 focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                    id="email"
                    name="email"
                    placeholder="jane@company.com"
                    required
                    type="email"
                  />
                  <div
                    class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                  >
                  </div>
                </div>
              </div>
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-white/90" for="project-type">
                What are we building? *
              </label>
              <div class="relative">
                <select
                  class="w-full rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                  id="project-type"
                  name="project-type"
                  required
                >
                  <option value="">Select project type</option>
                  <option value="new-website">New Website</option>
                  <option value="web-application">Web Application</option>
                  <option value="refining-existing">Refining an Existing Product</option>
                  <option value="headless-cms">Headless CMS Integration</option>
                  <option value="consulting">Just saying Hi / Consulting</option>
                </select>
                <div
                  class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                >
                </div>
              </div>
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-white/90" for="budget">
                Estimated Budget (Optional)
              </label>
              <div class="relative">
                <select
                  class="w-full rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                  id="budget"
                  name="budget"
                >
                  <option value="">Select budget range</option>
                  <option value="starter">&lt;$10k (Starter)</option>
                  <option value="growth">$10k - $25k (Growth)</option>
                  <option value="enterprise">$25k+ (Enterprise/Scale)</option>
                  <option value="unsure">Not sure yet</option>
                </select>
                <div
                  class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                >
                </div>
              </div>
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-white/90" for="vision">
                Tell us about your vision *
              </label>
              <div class="relative">
                <textarea
                  class="h-32 w-full resize-none rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white transition-all placeholder:text-white/50 focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                  id="vision"
                  name="vision"
                  placeholder="Tell us a bit about your project, your timeline, or the biggest challenge you are trying to solve..."
                  required></textarea>
                <div
                  class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                >
                </div>
              </div>
            </div>
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
              <Button id="submit-btn" style="secondary" type="submit">
                <span class="submit-text">Start the Conversation</span>
                <span class="loading-text hidden">Sending...</span>
              </Button>
              <Button id="hide-form-btn" style="tertiary"> Never mind, just email us </Button>
            </div>
            <div id="success-message" class="hidden text-center text-lg text-white/90">
              Message received! We'll be in touch soon.
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</SectionWrapper>

<style>
  /* Performance optimized animations using CSS classes to avoid forced reflows */
  .form-enter {
    opacity: 0;
    transform: translateY(20px);
  }

  .form-enter-active {
    opacity: 1;
    transform: translateY(0);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .form-exit {
    opacity: 1;
    transform: translateY(0);
  }

  .form-exit-active {
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }
</style>

<script>
  import { trackForm } from '@/utils/analytics';

  // Defer initialization until DOM is ready and form section is near viewport
  const initFormHandling = () => {
    const recaptchaSiteKey = import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY;
    let recaptchaLoaded = false;

    function loadRecaptcha() {
      if (recaptchaLoaded) return Promise.resolve();

      return new Promise((resolve) => {
        const script = document.createElement('script');
        // Use render parameter for invisible/programmatic reCAPTCHA (no badge UI)
        script.src = `https://www.google.com/recaptcha/api.js?render=${recaptchaSiteKey}`;
        script.async = true;
        script.onload = () => {
          (window as any).grecaptcha.ready(() => {
            recaptchaLoaded = true;
            resolve(undefined);
          });
        };
        document.head.appendChild(script);
      });
    }

    // Contact form toggle functionality
    const showFormBtn = document.getElementById('show-form-btn');
    const hideFormBtn = document.getElementById('hide-form-btn');
    const contactButtons = document.getElementById('contact-buttons');
    const contactForm = document.getElementById('contact-form');

    if (showFormBtn && contactButtons && contactForm) {
      showFormBtn.addEventListener('click', async function (e) {
        e.preventDefault();

        // Track form show event
        trackForm('form_show', {
          form_trigger: 'start_conversation_button',
        });

        // Load reCAPTCHA when form is shown (not before)
        await loadRecaptcha();

        // Batch DOM changes to prevent forced reflows
        contactButtons.classList.add('hidden');
        contactButtons.classList.remove('flex');
        contactForm.classList.remove('hidden');

        // Use CSS classes for smooth animation without forced reflows
        contactForm.classList.add('form-enter');

        // Use requestAnimationFrame to ensure DOM is ready
        requestAnimationFrame(() => {
          contactForm.classList.remove('form-enter');
          contactForm.classList.add('form-enter-active');
        });
      });
    }

    if (hideFormBtn && contactButtons && contactForm) {
      hideFormBtn.addEventListener('click', function (e) {
        e.preventDefault();

        // Track form hide event
        trackForm('form_hide', {
          form_trigger: 'never_mind_button',
        });

        // Use CSS classes for smooth animation without forced reflows
        contactForm.classList.remove('form-enter-active');
        contactForm.classList.add('form-exit', 'form-exit-active');

        setTimeout(() => {
          contactForm.classList.add('hidden');
          contactForm.classList.remove('form-exit', 'form-exit-active');
          contactButtons.classList.remove('hidden');
          contactButtons.classList.add('flex');
        }, 300);
      });
    }

    // Pixil contact form interactions
    function initPixilForm() {
      const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
      const submitText = document.querySelector('.submit-text') as HTMLElement;
      const loadingText = document.querySelector('.loading-text') as HTMLElement;
      const successMessage = document.getElementById('success-message') as HTMLElement;
      const form = document.querySelector('#contact-form form') as HTMLFormElement;

      // Form submission handling
      if (form && submitBtn && submitText && loadingText) {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();

          // Track form submission attempt
          trackForm('form_submit_attempt');

          // Show loading state
          submitText.classList.add('hidden');
          loadingText.classList.remove('hidden');
          submitBtn.disabled = true;

          try {
            // Ensure reCAPTCHA is loaded
            await loadRecaptcha();

            // Get reCAPTCHA token using programmatic approach
            const token = await new Promise((resolve, reject) => {
              (window as any).grecaptcha
                .execute(recaptchaSiteKey, { action: 'contact_form' })
                .then(resolve)
                .catch(reject);
            });

            // Collect form data
            const formData = new FormData(form);
            const data = {
              name: formData.get('name'),
              email: formData.get('email'),
              projectType: formData.get('project-type'),
              budget: formData.get('budget'),
              vision: formData.get('vision'),
              recaptchaToken: token,
            };

            // Send to API
            const response = await fetch('/api/contact', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
            });

            const result = await response.json();

            if (result.success) {
              // Track successful form submission
              trackForm('form_submit_success', {
                project_type: data.projectType,
                budget: data.budget,
              });

              // Show success message
              const buttonArea = submitBtn.parentElement;
              if (buttonArea && successMessage) {
                buttonArea.classList.add('hidden');
                successMessage.classList.remove('hidden');
              }

              // Reset form after successful submission
              form.reset();

              // Hide form and show contact buttons after a delay
              setTimeout(() => {
                const contactForm = document.getElementById('contact-form');
                const contactButtons = document.getElementById('contact-buttons');

                if (contactForm && contactButtons) {
                  // Use CSS classes for smooth animation without forced reflows
                  contactForm.classList.add('form-exit', 'form-exit-active');

                  setTimeout(() => {
                    contactForm.classList.add('hidden');
                    contactForm.classList.remove('form-exit', 'form-exit-active', 'form-enter-active');
                    contactButtons.classList.remove('hidden');
                    contactButtons.classList.add('flex');
                    // Reset success message for next time
                    if (successMessage) successMessage.classList.add('hidden');
                    if (buttonArea) buttonArea.classList.remove('hidden');
                  }, 300);
                }
              }, 3000); // Show success message for 3 seconds before hiding form
            } else {
              throw new Error(result.error || 'Form submission failed');
            }
          } catch (error) {
            console.error('Form submission error:', error);

            // Track form submission error
            trackForm('form_submit_error', {
              error_message: error instanceof Error ? error.message : 'Unknown error',
            });

            // Reset button state on error
            submitText.classList.remove('hidden');
            loadingText.classList.add('hidden');
            submitBtn.disabled = false;

            alert('There was an issue submitting your message. Please try again.');
          }
        });
      }
    }

    initPixilForm();
  }; // End of initFormHandling

  // Use IntersectionObserver to defer script initialization until form is near viewport
  if ('IntersectionObserver' in window) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            initFormHandling();
            observer.disconnect(); // Run once
          }
        });
      },
      {
        rootMargin: '200px', // Start loading 200px before form enters viewport
      }
    );

    const formSection = document.getElementById('get-in-touch');
    if (formSection) {
      observer.observe(formSection);
    }
  } else {
    // Fallback for browsers without IntersectionObserver
    initFormHandling();
  }
</script>

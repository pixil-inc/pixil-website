---
import SectionWrapper from '@/components/shared/SectionWrapper.astro';
import Button from '@/components/shared/Button.astro';

interface Props {
  recaptchaSiteKey: string;
}

const { recaptchaSiteKey } = Astro.props;
---

<SectionWrapper id="get-in-touch" classNames="px-6 py-0">
  <div class="mx-auto max-w-7xl space-y-24">
    <div
      class="bg-charcoal text-oatmeal relative overflow-hidden rounded-[3rem] p-12 text-center lg:p-32"
    >
      <div class="relative z-10">
        <h2 class="mb-8 text-4xl font-medium md:text-5xl">
          Let’s build something exceptional together.
        </h2>
        <p class="mx-auto mb-12 max-w-2xl text-xl font-light text-white/70 md:text-xl">
          Whether you have a detailed roadmap or just a spark of an idea, we’d love to hear about
          it. No high-pressure sales tactics—just a friendly conversation about your goals and how
          we can bring them to life.
        </p>

        <!-- Contact Buttons -->
        <div id="contact-buttons" class="flex flex-col justify-center gap-6 sm:flex-row">
          <Button id="show-form-btn" href="#" type="secondary">Start a Conversation</Button>
          <Button href="mailto:hello@pixil.ca" type="tertiary">hello@pixil.ca</Button>
        </div>

        <!-- Hidden Contact Form -->
        <div id="contact-form" class="mx-auto mt-12 hidden max-w-2xl">
          <form class="space-y-6 text-left" novalidate>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div>
                <label class="mb-2 block text-sm font-medium text-white/90" for="name">
                  Name *
                </label>
                <div class="relative">
                  <input
                    class="pixil-input w-full rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white transition-all placeholder:text-white/50 focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                    id="name"
                    name="name"
                    placeholder="Jane Doe"
                    required
                    type="text"
                  />
                  <div
                    class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                  >
                  </div>
                </div>
              </div>
              <div>
                <label class="mb-2 block text-sm font-medium text-white/90" for="email">
                  Email Address *
                </label>
                <div class="relative">
                  <input
                    class="pixil-input w-full rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white transition-all placeholder:text-white/50 focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                    id="email"
                    name="email"
                    placeholder="jane@company.com"
                    required
                    type="email"
                  />
                  <div
                    class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                  >
                  </div>
                </div>
              </div>
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-white/90" for="project-type">
                What are we building? *
              </label>
              <div class="relative">
                <select
                  class="pixil-input w-full rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                  id="project-type"
                  name="project-type"
                  required
                >
                  <option value="">Select project type</option>
                  <option value="new-website">New Website</option>
                  <option value="web-application">Web Application</option>
                  <option value="refining-existing">Refining an Existing Product</option>
                  <option value="headless-cms">Headless CMS Integration</option>
                  <option value="consulting">Just saying Hi / Consulting</option>
                </select>
                <div
                  class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                >
                </div>
              </div>
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-white/90" for="budget">
                Estimated Budget (Optional)
              </label>
              <div class="relative">
                <select
                  class="pixil-input w-full rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                  id="budget"
                  name="budget"
                >
                  <option value="">Select budget range</option>
                  <option value="starter">&lt;$10k (Starter)</option>
                  <option value="growth">$10k - $25k (Growth)</option>
                  <option value="enterprise">$25k+ (Enterprise/Scale)</option>
                  <option value="unsure">Not sure yet</option>
                </select>
                <div
                  class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                >
                </div>
              </div>
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-white/90" for="vision">
                Tell us about your vision *
              </label>
              <div class="relative">
                <textarea
                  class="pixil-input h-32 w-full resize-none rounded-lg border border-white/20 bg-white/10 px-4 py-3 text-white transition-all placeholder:text-white/50 focus:border-white/50 focus:ring-1 focus:ring-white/50 focus:outline-none"
                  id="vision"
                  name="vision"
                  placeholder="Tell us a bit about your project, your timeline, or the biggest challenge you are trying to solve..."
                  required></textarea>
                <div
                  class="pixil-indicator absolute -top-1 -right-1 h-3 w-3 rotate-45 bg-white/20 opacity-0 transition-all duration-300"
                >
                </div>
              </div>
            </div>
            <div class="flex justify-center">
              <div class="g-recaptcha" data-sitekey={recaptchaSiteKey}></div>
            </div>
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
              <button
                class="bg-oatmeal text-charcoal rounded-pill px-8 py-3 text-lg font-bold transition-all hover:scale-105 hover:bg-white"
                type="submit"
                id="submit-btn"
              >
                <span class="submit-text">Start the Conversation</span>
                <span class="loading-text hidden">Sending...</span>
              </button>
              <button
                id="hide-form-btn"
                class="text-white/70 underline transition-colors hover:text-white"
                type="button"
              >
                Never mind, just email us
              </button>
            </div>
            <div id="success-message" class="hidden text-center text-lg text-white/90">
              Message received! We'll be in touch soon.
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</SectionWrapper>

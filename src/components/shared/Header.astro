---
import Logo from '@/components/shared/Logo.astro';
---

<header class="bg-oatmeal/90 border-charcoal/5 fixed top-0 z-50 w-full border-b backdrop-blur-md">
  <nav class="container mx-auto flex h-20 max-w-7xl items-center justify-between px-6">
    <div class="flex h-8 w-32 items-center justify-center rounded-full text-gray-900">
      <Logo />
    </div>
    <div
      class="text-charcoal/60 hidden items-center gap-8 text-sm font-medium tracking-wide md:flex"
    >
      <a class="transition-colors hover:text-black" href="#get-in-touch">Get in Touch</a>
    </div>
  </nav>
</header>

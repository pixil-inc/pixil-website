---
import '@/styles/estimates.css';
import type { Client } from '@/types';
import Logo from '@/components/shared/Logo.astro';

interface Props {
  date: string;
  client: Client;
  strategyType?: string;
}

const { date, client, strategyType = 'Project Estimate' } = Astro.props;
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Project estimate from Pixil Web Studio" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{`${client?.name} | Pixil`}</title>

    <!-- Critical font preloads -->
    <link href="/fonts/Inter-600.woff2" rel="preload" as="font" type="font/woff2" crossorigin />
    <link href="/fonts/Inter-400.woff2" rel="preload" as="font" type="font/woff2" crossorigin />
  </head>

  <body style="background: #f8f7f4; margin: 0; padding: 40px 0">
    <div class="estimate-page">
      <div class="page-container">
        <header class="estimate-header">
          <div class="brand flex h-14 w-32">
            <Logo />
          </div>
          <div class="estimate-meta">
            <div class="estimate-client">{client.name}</div>
            <div class="estimate-date">{date}</div>
            <span class="estimate-type">{strategyType}</span>
          </div>
        </header>

        <slot />

        <footer class="estimate-footer">
          {
            strategyType === 'Project Estimate' ? (
              <>
                <p style="margin-bottom: 15px">
                  <strong>Terms & Conditions:</strong>
                </p>
                <ul style="list-style: none; padding: 0; margin: 0; line-height: 1.7">
                  <li style="margin-bottom: 8px">
                    • <strong>Estimate Validity:</strong> This estimate is valid for 30 days from the date above.
                  </li>
                  <li style="margin-bottom: 8px">
                    • <strong>Deposit & Payment:</strong> 40% deposit required to schedule work, 30% at midway mark, and
                    remaining 30% balance due upon project completion before final delivery.
                  </li>
                  <li style="margin-bottom: 8px">
                    • <strong>Revisions:</strong> Assumes (2) rounds of revisions following the initial presentation of
                    each asset included in each deliverable phase. Additional revisions billed at $125/hour.
                  </li>
                  <li style="margin-bottom: 8px">
                    • <strong>Assets & Content:</strong> Any photography, videography, copywriting, or custom asset
                    development is not included in any budget line item above and will be provided in a separate
                    estimate as required. Client is responsible for providing all necessary content, images, and
                    materials.
                  </li>
                  <li style="margin-bottom: 8px">
                    • <strong>Out of Scope:</strong> Any requirements outside those described above will be estimated
                    separately at $125/hour.
                  </li>
                  <li style="margin-bottom: 8px">
                    • <strong>Currency:</strong> All costs are in Canadian dollars (CAD) before applicable taxes.
                  </li>
                  <li style="margin-bottom: 8px">
                    • <strong>Intellectual Property:</strong> Full source code and design files transferred to client
                    upon final payment. Pixil retains the right to showcase the project in portfolios and case studies.
                  </li>
                  <li style="margin-bottom: 8px">
                    • <strong>Post-Launch Support:</strong> 30 days of complimentary bug fixes and minor adjustments
                    included. Ongoing support and maintenance available upon request.
                  </li>
                </ul>
              </>
            ) : (
              <div class="strategy-footer">
                <p>
                  <strong>Prepared by Pixil Web Studio Inc.</strong>
                </p>
                <p>1367 Lawson St., Innisfil, ON L9S 0N8</p>
                <p>647.613.2189 | hello@pixil.ca</p>
              </div>
            )
          }
        </footer>
      </div>
    </div>
    <div class="no-print my-8 text-center">
      <button
        onclick="window.print()"
        class="cursor-pointer rounded-full border-none bg-black px-5 py-2.5 font-semibold text-white transition-colors hover:bg-gray-800"
      >
        Download PDF
      </button>
    </div>
  </body>
</html>

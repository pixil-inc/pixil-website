---
import '@/styles/global.css';
import Header from '@/components/shared/Header.astro';
import Footer from '@/components/shared/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  showHeaderCTA?: boolean;
  showHeader?: boolean;
  noIndex?: boolean;
  noFollow?: boolean;
}

const {
  title = 'Pixil Web Studio Inc.',
  description = 'Digital Excellence. Down to the last Pixil.',
  showHeaderCTA = true,
  showHeader = true,
  noFollow = false,
} = Astro.props;
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    {noFollow && <meta name="robots" content="noindex, nofollow" />}
    <title>{title}</title>

    <!-- Critical font preloads - load immediately for better CWV -->
    <link href="/fonts/Inter-600.woff2" rel="preload" as="font" type="font/woff2" crossorigin />
    <link href="/fonts/Inter-400.woff2" rel="preload" as="font" type="font/woff2" crossorigin />

    <!-- Inline critical CSS for above-the-fold content -->
    <style is:inline>
      body {
        margin: 0;
        background-color: #f9f7f4;
        color: #1a1a1a;
        font-family:
          Inter,
          system-ui,
          -apple-system,
          sans-serif;
        -webkit-font-smoothing: antialiased;
      }
      .skip-link {
        position: absolute;
        left: -9999px;
        z-index: 999;
        padding: 1em;
        background-color: #000;
        color: #fff;
        text-decoration: none;
      }
      .skip-link:focus {
        left: 50%;
        transform: translateX(-50%);
        top: 0;
      }
    </style>

    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-K3QVMP55');
    </script>
  </head>

  <body class="bg-oatmeal text-primary font-sans antialiased selection:bg-black selection:text-white">
    <!-- Skip link for keyboard navigation -->
    <a href="#main-content" class="skip-link"> Skip to main content </a>

    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-K3QVMP55"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->

    {showHeader && <Header showHeaderCTA={showHeaderCTA} />}
    <main id="main-content" role="main" class={`pb-20 ${showHeader ? 'pt-32' : 'pt-6'}`}>
      <slot />
    </main>
    <Footer />

    <!-- Defer non-critical scripts to improve LCP -->
    <script>
      // Defer analytics and animations until after page load
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeNonCriticalScripts);
      } else {
        // DOMContentLoaded already fired
        initializeNonCriticalScripts();
      }

      function initializeNonCriticalScripts() {
        // Use requestIdleCallback to run after main thread is free
        if ('requestIdleCallback' in window) {
          requestIdleCallback(loadTracking);
        } else {
          // Fallback for browsers without requestIdleCallback
          setTimeout(loadTracking, 1);
        }
      }

      async function loadTracking() {
        const { trackSection, trackButton, trackPageView } = await import('@/utils/analytics');
        const { createScrollObserver, handleScrollAnimation, observeAnimations, setupAnimationFallback } =
          await import('@/utils/observers');

        // Create observer with custom callback for animations + tracking
        const observer = createScrollObserver((entry) => {
          handleScrollAnimation(entry);

          // Section tracking - track when sections come into view
          if (entry.isIntersecting) {
            const sectionId = entry.target.id;
            if (sectionId) {
              const mainSections = ['intro', 'services', 'about-us', 'why-us', 'get-in-touch'];
              if (mainSections.includes(sectionId)) {
                trackSection(sectionId);
              }
            }
          }
        });

        const elementsToAnimate = document.querySelectorAll('.scroll-hidden, .fade-up-hidden');

        // Observe animations
        observeAnimations(elementsToAnimate, observer);

        // Also observe main sections for tracking
        const mainSections = document.querySelectorAll('#intro, #services, #about-us, #why-us, #get-in-touch');
        mainSections.forEach((section) => {
          observer.observe(section);
        });

        // Set up button click tracking
        const trackableButtons = document.querySelectorAll('button, a[role="button"], .btn, [data-track-button]');
        trackableButtons.forEach((button) => {
          button.addEventListener('click', (e) => {
            const buttonText = button.textContent?.trim() || button.getAttribute('aria-label') || 'Unknown Button';
            const buttonType = button.tagName.toLowerCase() === 'a' ? 'link' : 'button';
            trackButton(buttonText, buttonType);
          });
        });

        // Track page load
        trackPageView();

        // Fallback animation after 3 seconds
        setupAnimationFallback(elementsToAnimate, 3000);
      }

      // General smooth scroll utility for site-wide use (keep synchronous for immediate use)
      function initSmoothScroll() {
        const scrollElements = document.querySelectorAll('[data-scroll-to]');

        scrollElements.forEach((element) => {
          element.addEventListener('click', (e) => {
            e.preventDefault();
            const targetId = element.getAttribute('data-scroll-to');

            if (targetId) {
              const targetSection = document.getElementById(targetId);

              if (targetSection) {
                targetSection.scrollIntoView({
                  behavior: 'smooth',
                  block: 'start',
                });
              }
            }
          });
        });
      }

      // Initialize smooth scroll immediately (needed for navigation)
      initSmoothScroll();
    </script>
  </body>
</html>
